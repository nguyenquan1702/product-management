extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    +alert-success(1000)
    h1-error(class="mb-4") Chỉnh sửa danh mục sản phẩm 

    form(
        action = `${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
        id="form-edit-product"
        method="POST"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required 
                value = data.title
            ) 
        div(class="form-group")  
            label(for="desc") Mô tả
            textarea(
                class="form-control"
                id="desc"
                name="description"
                rows="5"
            ) #{data.description}
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            )  Cập nhật     